<link href="~/css/project.css" rel="stylesheet" />

@model GroupProject.Models.InventoryViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>2 Guys and a Store</title>
</head>
<body>
    <div>
        <h2>Add a new item</h2>

        <form asp-action="Create">

            <label>Item Number: </label>
            <input asp-for="InventoryNumber" id="InventoryNumber" /><br />

            <label>Item Name: </label>
            <input asp-for="InventoryName" id="InventoryName" /><br />

            <label>Item Description: </label>
            <input asp-for="InventoryDescription" id="InventoryDescription" /><br />

            <label>Item Stock Amount: </label>
            <input asp-for="InventoryStock" id="InventoryStock" /><br />

            <label>Item Price: </label>
            <input asp-for="IventoryPrice" id="InventoryPrice" /><br />
            <input type="submit" value="submit" />
        </form>
    </div>
</body>
</html>


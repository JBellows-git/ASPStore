<link href="~/css/project.css" rel="stylesheet" />
@model CartIndexViewModel

@{
    ViewData["Title"] = "AddToCart";
}

<h2>Your Cart</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Quantity</th>
            <th>Item</th>
            <th>Item Desc</th>
            <th class="text-right">Price</th>
            <th class ="text-right">Subtotal</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
            <tr>
               <td class="text-center"> @line.Quantity</td>
                <td class="text-center"> @line.Inventory.InventoryName</td>
               <td class="text-left"> @line.Inventory.InventoryDescription</td>
                <td class="text-right">@line.Inventory.InventoryPrice.ToString("c")</td>
                <td class="text-right">@((line.Quantity * line.Inventory.InventoryPrice).ToString("c"))</td>
                <td><a asp-action="RemoveFromCart" asp-route-id="@line.Inventory.InventoryID" asp-route-returnUrl="products/index">Remove From Cart</a></td>
            </tr> 

        }

    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">@Model.Cart.ComputeTotalValue().ToString("c")</td>
        </tr>
    </tfoot>
</table>

<link href="~/css/project.css" rel="stylesheet" />

@model GroupProject.Models.CustomerViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update Account Information</title>
</head>
<body>
    <div>
        <h2>Update Your Information</h2>
        <form asp-action="Update">
            
            <table>
                <tr>
                    <td><label asp-for="FirstName">First Name: </label></td>
                    <td><input asp-for="FirstName" id="FirstName" />&nbsp;@Html.ValidationMessageFor(model => model.FirstName)</td>
                </tr>
                <tr>
                    <td><label asp-for="LastName">Last Name: </label></td>
                    <td><input asp-for="LastName" id="LastName" />&nbsp;@Html.ValidationMessageFor(model => model.LastName)</td> 
                </tr>
                <tr>
                    <td><label asp-for="Address">Address: </label></td>
                    <td><input asp-for="Address" id="Address" />&nbsp;@Html.ValidationMessageFor(model => model.Address)</td>
                </tr>
                <tr>
                    <td><label asp-for="City">City: </label></td>
                    <td><input asp-for="City" id="City" />&nbsp;@Html.ValidationMessageFor(model => model.City)</td>
                </tr>
                <tr>
                    <td><label asp-for="State">State: </label></td>
                    <td><input asp-for="State" id="State" />&nbsp;@Html.ValidationMessageFor(model => model.State)</td>
                </tr>
                <tr>
                    <td><label asp-for="Zipcode">Zip code: </label></td>
                    <td><input asp-for="Zipcode" id="Zipcode" />&nbsp; @Html.ValidationMessageFor(model => model.Zipcode)</td>
                </tr>
            </table>
            <input type="submit" value="Update" />

        </form>
        <br />
        
        
    </div>
</body>
</html>
